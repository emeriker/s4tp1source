<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controleur.VuePrincipale">
	<children>
		<HBox>
			<children>
				<VBox>
					<children>
						<VBox alignment="TOP_RIGHT" spacing="10.0">
							<children>
								<HBox spacing="10.0">
									<children>
										<TextField fx:id="texteFieldMotRechercher" promptText="Mot Rechercher" />
										<ComboBox fx:id="comboBoxLivre" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="180.0" promptText="Choisir un livre" />
									</children>
								</HBox>
								<HBox alignment="CENTER_LEFT" spacing="10.0">
									<children>
										<Button fx:id="boutonRechercher" mnemonicParsing="false" text="Rechercher" />
                              <Label fx:id="labelNombreDeMot" text="Nombre de mot :" textAlignment="CENTER" />
                              <TextField fx:id="texteFieldNombreDeMot" promptText="0" />
									</children>
								</HBox>
								<ListView fx:id="listViewMotRechercher" />
            										<Button fx:id="boutonAnalyser" mnemonicParsing="false" text="Analyser" />
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
							<VBox.margin>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</VBox.margin>
						</VBox>
					</children>
				</VBox>
				<ScrollPane fx:id="scrollPaneLivre" hbarPolicy="NEVER" prefWidth="480.0">
					<content>
						<VBox fx:id="vBoxLivre" spacing="10.0">
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</VBox>
					</content>
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</ScrollPane>
			</children>
		</HBox>
	</children>
</VBox>
